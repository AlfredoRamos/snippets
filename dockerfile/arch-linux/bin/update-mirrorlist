#!/bin/bash --

# Generate an updated mirrorlist
# https://www.archlinux.org/mirrorlist/

mirrorlist_uri='https://www.archlinux.org/mirrorlist/?country=US&protocol=http&protocol=https&ip_version=4&ip_version=6&use_mirror_status=on'
mirrorlist_file=/etc/pacman.d/mirrorlist

curl -o "${mirrorlist_file}" "${mirrorlist_uri}"
sed -ri 's|^#(Server)|\1|g' "${mirrorlist_file}"
